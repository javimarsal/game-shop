{{> navbar}}

{{> header}}

<main>
    <div class="container">
        <div class="row gy-4">
            <!-- Cards -->
            {{#each products}}
            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card text-dark bg-light">
                    <img src="{{this.url}}" class="card-img-top" alt="{{this.title}} game cover">
                    <div class="card-header">
                        <h3 class="card-title">{{this.title}}</h3>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{this.description}}</p>

                        <button class="btn btn-primary card-button {{#unless ../user}} disabled {{/unless}}" role="button" onclick="buy_clicked(event, {{this._id}})">Buy</button>
                        <span class="card-price">{{formatPrice this.price}}</span>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</main>

{{> footer}}

<script>
    function buy_clicked(event, productID) {
        event.preventDefault();
        
        // Se a√±ade el producto al carrito del usuario
        Model.buy(productID);

        navigateTo(event, '/cart')
    }
</script>